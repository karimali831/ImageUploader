@model ImageUploader.Models.ImageUpload

@{
    ViewData["Title"] = "Image";
}



@Html.ActionLink("View Images", "Index") 

@if (TempData["UploadResponnseMsg"] != null)
{
    <div class="alert alert-success" role="alert">
      @TempData["UploadResponnseMsg"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h4>Uploaded on @Model.Created.ToString("dd/MM/yyyy HH:mm")</h4>
    </div>
    <div class="card-body">
        <img src="@Model.UrlPath" />
    </div>
</div>

